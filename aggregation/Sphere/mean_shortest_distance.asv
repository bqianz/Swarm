function [mean_shortest] = mean_shortest_distance(th,phi)
N = length(th(:));
nearest_dist=zeros(1,N);
farthest_dist=zeros(1,N);

for i = 1:N
    th1 = th(i);
    phi1 = phi(i);
    temp = sort(acos(cos(th1)*cos(th) + sin(th1)*sin(th).*cos(phi1 - phi)));
    nearest_dist(i) = temp(2);
    farthest_dist(i) = temp(end);
end
    
end
